<!DOCTYPE html>
<html lang="en" class="h-100">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title %> | OnTrack</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <style>
      body {
        color: #f0f0f0;
        font-family: "Segoe UI", sans-serif;
      }

      header h3 {
        font-weight: 600;
      }

      .hero-box-wide {
        max-width: 55%;
        margin: 2rem auto;
        padding: 2rem;
        background-color: rgba(0, 0, 0, 0.4);
        border-radius: 0.75rem;
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.7);
        border: 1px solid rgba(255, 255, 255, 0.1);
        text-align: left;

        /* Scroll settings */
        max-height: 70vh;
        overflow-y: auto;
      }

      h2 {
        text-align: center;
        margin-bottom: 1rem;
      }

      .program-name {
        text-align: center; 
        font-size: 1.5rem; 
        opacity: 0.7; 
        margin-bottom: 1.5rem; 
      }

      .results-section {
        margin-bottom: 2rem;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 6px;
      }

      .results-section h4 {
        margin-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding-bottom: 0.5rem;
      }

      .requirement-item {
        padding: 0.75rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
      }

      .requirement-item:last-child {
        border-bottom: none;
      }

      .badge.met {
        background-color: rgba(0, 200, 100, 0.2);
        color: #00ff99;
        border: 1px solid #00ff99;
      }

      .badge.not-met {
        background-color: rgba(200, 0, 0, 0.2);
        color: #ff4d4d;
        border: 1px solid #ff4d4d;
      }

      .meta {
        font-size: 0.85rem;
        color: #bbb;
        margin-top: 0.25rem;
      }

      .btn-outline-light {
        border-color: rgba(255, 255, 255, 0.3);
        background-color: rgba(255, 255, 255, 0.05);
      }

      .btn-outline-light:hover {
        background-color: rgba(255, 255, 255, 0.15);
      }

      .course-code {
        color: #ddd;
        text-decoration: none;
        transition: color 0.15s ease, text-decoration-color 0.15s ease;
      }

      .course-code:hover {
        color: #fff;
        text-decoration: underline;
        cursor: pointer;
      }

      /* ======================== */
      /* Header Styles            */
      /* ======================== */
      .nav-masthead .nav-link {
        color: rgba(255, 255, 255, 0.5);
        border-bottom: 0.25rem solid transparent;
      }

      .nav-masthead .nav-link:hover,
      .nav-masthead .nav-link:focus {
        border-bottom-color: rgba(255, 255, 255, 0.25);
      }

      .nav-masthead .nav-link + .nav-link {
        margin-left: 1rem;
      }

      .nav-masthead .active {
        color: #ffffff;
        border-bottom-color: #ffffff;
      }

      a {
        color: #ffffff !important; /* Ensure links are white */
        text-decoration: none;
      }

      /* ======================== */
      /* Footer                   */
      /* ======================== */
      footer {
        z-index: 1;
        position: relative;
      }
    </style>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Vanta.js & Three.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vanta/dist/vanta.net.min.js"></script>
  </head>

  <body class="d-flex h-100 text-bg-dark" id="vanta-bg">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <header class="mb-auto">
        <div>
          <a href="/" class="text-decoration-none">
            <h3 class="float-md-start mb-0">OnTrack</h3>
          </a>
          <nav class="nav nav-masthead justify-content-center float-md-end">
            <a class="nav-link fw-bold py-1 px-2" href="/">Home</a>
            <a class="nav-link fw-bold py-1 px-2" href="/features">Features</a>
            <a class="nav-link fw-bold py-1 px-2" href="/about">About</a>
            <a class="nav-link fw-bold py-1 px-2" href="/contact">Contact</a>
          </nav>
        </div>
      </header>

      <main class="px-3">
  <div class="hero-box-wide">
    <h2>Track your progress</h2>
    <p class="program-name"><%= program %></p>

    <% Object.entries(progress).forEach(([section, requirements], idx) => { %>

      <% if (Array.isArray(requirements)) { %>
        <div class="results-section mb-3">
          <button
            class="btn btn-outline-light w-100 text-start"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#section-<%= idx %>"
            aria-expanded="false"
            aria-controls="section-<%= idx %>">
            <% if (section === "required_courses") { %>
              Core Courses
            <% } else if (section === "elective_requirement") { %>
              Elective Requirements
            <% } else if (section === "additional_requirement") { %>
                Additional Requirements
            <% } else { %>
              <%= section %>
            <% } %>
          </button>

          <div class="collapse" id="section-<%= idx %>">
            <% requirements.forEach(req => { %>
              <div class="requirement-item">
                <strong><%= req.description %></strong>
                <span class="badge <%= req.met ? 'met' : 'not-met' %> ms-2">
                  <%= req.met ? "Met" : "Not Met" %>
                </span>
                <div class="meta">
                  Taken: 
                   <% if (req.courses_taken.length) { %>
                    <% req.courses_taken.forEach((c, i) => { %>
                      <a href="https://uwflow.com/course/<%= c.code.toLowerCase() %>" target="_blank" rel="noopener"
                      class="course-code"
                      data-code="<%= c.code %>"
                      data-bs-toggle="tooltip"
                      data-bs-title="Loading UWFlow data...">
                      <%= c.code %>
                    </a><%= i < req.courses_taken.length - 1 ? ", " : "" %>
                    <% }) %>
                    <% } else { %>
                      None
                      <% } %>
                      <br />
                  <% if (req.type !== 'one_required' && req.type !== 'all_required') { %>
                    Options:
                    <% if (req.courses_remaining.length) { %>
                      <% req.courses_remaining.forEach((c, i) => { %>
                        <a href="https://uwflow.com/course/<%= c.code.toLowerCase() %>" target="_blank" rel="noopener"
                        class="course-code"
                        data-code="<%= c.code %>"
                        data-bs-toggle="tooltip"
                        data-bs-title="Loading UWFlow data...">
                        <%= c.code %>
                        </a><%= i < req.courses_remaining.length - 1 ? ", " : "" %>
                      <% }) %>
                      <% } else { %>
                        None
                        <% } %>
                        <% } %>
                      </div>
                    </div>
                    <% }) %>
                  </div>
                </div>

      <!-- Special rendering for new communication_requirement object -->
      <% } else if (section === "communication_requirement") { %>
        <div class="results-section mb-3">
          <button
            class="btn btn-outline-light w-100 text-start"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#section-<%= idx %>"
            aria-expanded="false"
            aria-controls="section-<%= idx %>">
            Communication Requirements
          </button>

          <div class="collapse" id="section-<%= idx %>">
            <% Object.entries(requirements.lists).forEach(([listName, list]) => { %>
              <div class="requirement-item">
                <strong><%= list.description %></strong>
                <div class="meta">
                  Taken: 
                  <% if (list.courses_taken.length) { %>
                    <% list.courses_taken.forEach((c, i) => { %>
                      <a href="https://uwflow.com/course/<%= c.code.toLowerCase() %>" target="_blank" rel="noopener"
                      class="course-code"
                      data-code="<%= c.code %>"
                      data-bs-toggle="tooltip"
                      data-bs-title="Loading UWFlow data...">
                      <%= c.code %>
                      </a><%= i < list.courses_taken.length - 1 ? ", " : "" %>
                    <% }) %>
                    <% } else { %>
                      None
                      <% } %>
                  <br />
                  Options available:
                  <% if (list.courses_remaining.length) { %>
                    <% list.courses_remaining.forEach((c, i) => { %>
                      <a href="https://uwflow.com/course/<%= c.code.toLowerCase() %>" target="_blank" rel="noopener"
                      class="course-code"
                      data-code="<%= c.code %>"
                      data-bs-toggle="tooltip"
                      data-bs-title="Loading UWFlow data...">
                      <%= c.code %>
                      </a><%= i < list.courses_remaining.length - 1 ? ", " : "" %>
                    <% }) %>
                    <% } else { %>
                      None
                      <% } %>
                </div>
              </div>
            <% }) %>

            <h5 class="mt-3">Options</h5>
            <% requirements.options.forEach(opt => { %>
              <div class="requirement-item">
                <strong><%= opt.description %></strong>
                <span class="badge <%= opt.met ? 'met' : 'not-met' %> ms-2">
                  <%= opt.met ? "Met" : "Not Met" %>
                </span>
              </div>
            <% }) %>
          </div>
        </div>

      <!-- Breadth Requirement -->
       <% } else if (section === "breadth_requirement") { %>
        <div class="results-section mb-3">
          <button
            class="btn btn-outline-light w-100 text-start"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#section-<%= idx %>"
            aria-expanded="false"
            aria-controls="section-<%= idx %>">
            Breadth Requirement
          </button>

    <div class="collapse" id="section-<%= idx %>">
      <div class="requirement-item">
        <strong>Status:</strong>
        <span class="badge <%= requirements.satisfied ? 'met' : 'not-met' %> ms-2">
          <%= requirements.satisfied ? "Met" : "Not Met" %>
        </span>
      </div>

      <div class="meta mb-3">
        <p>The <strong>Breadth Requirement</strong> ensures coverage across four areas:</p>
        <ul>
          <li>Humanities (<%= requirements.categories.humanities.units %> unit) ‚Äî <%= requirements.categories.humanities.met ? "Met" : "In Progress" %> </li>
          <li>Social Sciences (<%= requirements.categories.social_sciences.units %> unit) ‚Äî <%= requirements.categories.social_sciences.met ? "Met" : "In Progress" %> </li>
          <li>Pure Sciences (<%= requirements.categories.pure_sciences.units %> units) ‚Äî <%= requirements.categories.pure_sciences.met ? "Met" : "In Progress" %> </li>
          <li>Applied Sciences (<%= requirements.categories.applied_sciences.units %> units) ‚Äî <%= requirements.categories.applied_sciences.met ? "Met" : "In Progress" %> </li>
        </ul>
      </div>

      <% Object.entries(requirements.categories).forEach(([cat, info]) => { %>
        <div class="requirement-item">
          <strong><%= cat.charAt(0).toUpperCase() + cat.slice(1).replace("_", " ") %></strong>
          <span class="badge <%= info.met ? 'met' : 'not-met' %> ms-2">
            <%= info.met ? "Met" : "Not Met" %>
          </span>
          <div class="meta">
            Progress: <%= info.taken.length %>/<%= info.needed %><br/>
            Taken: 
            <% if (info.taken.length) { %>
              <% info.taken.forEach((c, i) => { %>
                <a href="https://uwflow.com/course/<%= c.trim().replace(/\s+/g, '').toLowerCase(); %>" target="_blank" rel="noopener"
                class="course-code"
                data-code="<%= c.trim().replace(/\s+/g, '').toLowerCase(); %>"
                data-bs-toggle="tooltip"
                data-bs-title="Loading UWFlow data...">
                <%= c %>
                </a><%= i < info.taken.length - 1 ? ", " : "" %>
              <% }) %>
              <% } else { %>
                None
                <% } %>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  
<!-- Depth Requirement -->
<% } else if (section === "depth_requirement") { %>
  <div class="results-section mb-3">
    <button
      class="btn btn-outline-light w-100 text-start"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#section-<%= idx %>"
      aria-expanded="false"
      aria-controls="section-<%= idx %>">
      Depth Requirement
    </button>

    <div class="collapse" id="section-<%= idx %>">
      <div class="meta mb-3">
        <p>The <strong>Depth Requirement</strong> can be met in two ways:</p>
        <ul>
          <li>
            <strong>3 courses (1.5 units)</strong> from the same subject, 
            with at least one of them (0.5 units) at the third-year level or higher
          </li>
          <li>
            <strong>OR</strong> 3 courses (1.5 units) with the same subject 
            forming a prerequisite chain of length three.
          </li>
        </ul>
      </div>

      <div class="requirement-item">
        <strong>Status:</strong>
        <span class="badge <%= requirements.satisfied ? 'met' : 'not-met' %> ms-2">
          <%= requirements.satisfied ? "Met" : "Not Met" %>
        </span>
      </div>

      <% if (requirements.satisfied) { %>
        <p><strong>Subject:</strong> <%= requirements.subject %></p>
        <p><strong>Chain:</strong> <%= (requirements.chain || []).slice().reverse().join(" ‚Üí ") %></p>
      <% } else { %>
        <p><%= requirements.note %></p>
      <% } %>
    </div>
  </div>
<% } %>
<% }) %>

  </div>
</main>

<button class="btn btn-outline-light" 
        data-bs-toggle="modal" 
        data-bs-target="#editCoursesModal" style="width: 20%; align-self: center; text-align: center; background-color: rgba(0, 0, 0, 0.616);">
  See / Edit Courses
</button>

<!-- Modal -->
<div class="modal fade" id="editCoursesModal" tabindex="-1" aria-labelledby="editCoursesModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/submit" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="editCoursesModalLabel">Edit Your Courses</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <!-- Keep the same major -->
