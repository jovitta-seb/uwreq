<!DOCTYPE html>
<html lang="en" class="h-100">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title %> | OnTrack</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <style>
      body {
        color: #f0f0f0;
        font-family: "Segoe UI", sans-serif;
      }

      header h3 {
        font-weight: 600;
      }

      .hero-box-wide {
        max-width: 55%;
        margin: 2rem auto;
        padding: 2rem;
        background-color: rgba(0, 0, 0, 0.4);
        border-radius: 0.75rem;
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.7);
        border: 1px solid rgba(255, 255, 255, 0.1);
        text-align: left;

        /* Scroll settings */
        max-height: 70vh;
        overflow-y: auto;
      }

      h2 {
        text-align: center;
        margin-bottom: 1rem;
      }

      /* Make the program name smaller and lighter */
      .program-name {
        text-align: center; /* center it under the H2 */
        font-size: 1.5rem; /* smaller text */
        opacity: 0.7; /* lighter look */
        margin-bottom: 1.5rem; /* space before the sections start */
        text-align: center;
      }

      .results-section {
        margin-bottom: 2rem;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 6px;
      }

      .results-section h4 {
        margin-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding-bottom: 0.5rem;
      }

      .requirement-item {
        padding: 0.75rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
      }

      .requirement-item:last-child {
        border-bottom: none;
      }

      .badge.met {
        background-color: rgba(0, 200, 100, 0.2);
        color: #00ff99;
        border: 1px solid #00ff99;
      }

      .badge.not-met {
        background-color: rgba(200, 0, 0, 0.2);
        color: #ff4d4d;
        border: 1px solid #ff4d4d;
      }

      .meta {
        font-size: 0.85rem;
        color: #bbb;
        margin-top: 0.25rem;
      }

      .btn-outline-light {
        border-color: rgba(255, 255, 255, 0.3);
        background-color: rgba(255, 255, 255, 0.05);
      }

      .btn-outline-light:hover {
        background-color: rgba(255, 255, 255, 0.15);
      }

      /* ======================== */
      /* Header Styles            */
      /* ======================== */
      .nav-masthead .nav-link {
        color: rgba(255, 255, 255, 0.5);
        border-bottom: 0.25rem solid transparent;
      }

      .nav-masthead .nav-link:hover,
      .nav-masthead .nav-link:focus {
        border-bottom-color: rgba(255, 255, 255, 0.25);
      }

      .nav-masthead .nav-link + .nav-link {
        margin-left: 1rem;
      }

      .nav-masthead .active {
        color: #ffffff;
        border-bottom-color: #ffffff;
      }

      a {
        color: #ffffff !important; /* Ensure links are white */
        text-decoration: none;
      }

      /* ======================== */
      /* Footer                   */
      /* ======================== */
      footer {
        z-index: 1;
        position: relative;
      }
    </style>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Vanta.js & Three.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vanta/dist/vanta.net.min.js"></script>
  </head>

  <body class="d-flex h-100 text-bg-dark" id="vanta-bg">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <header class="mb-auto">
        <div>
          <a href="/" class="text-decoration-none">
            <h3 class="float-md-start mb-0">OnTrack</h3>
          </a>
          <nav class="nav nav-masthead justify-content-center float-md-end">
            <a class="nav-link fw-bold py-1 px-2" href="/">Home</a>
            <a class="nav-link fw-bold py-1 px-2" href="/features">Features</a>
            <a class="nav-link fw-bold py-1 px-2" href="/about">About</a>
            <a class="nav-link fw-bold py-1 px-2" href="/contact">Contact</a>
          </nav>
        </div>
      </header>

      <main class="px-3">
  <div class="hero-box-wide">
    <h2>Track your progress</h2>
    <p class="program-name"><%= program %></p>

    <% Object.entries(progress).forEach(([section, requirements], idx) => { %>

      <% if (Array.isArray(requirements)) { %>
        <!-- Normal requirement arrays -->
        <div class="results-section mb-3">
          <button
            class="btn btn-outline-light w-100 text-start"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#section-<%= idx %>"
            aria-expanded="false"
            aria-controls="section-<%= idx %>">
            <% if (section === "required_courses") { %>
              Core Courses
            <% } else if (section === "elective_requirement") { %>
              Elective Requirements
            <% } else if (section === "additional_requirement") { %>
                Additional Requirements
            <% } else { %>
              <%= section %>
            <% } %>
          </button>

          <div class="collapse" id="section-<%= idx %>">
            <% requirements.forEach(req => { %>
              <div class="requirement-item">
                <strong><%= req.description %></strong>
                <span class="badge <%= req.met ? 'met' : 'not-met' %> ms-2">
                  <%= req.met ? "Met" : "Not Met" %>
                </span>
                <div class="meta">
                  Taken: <%= req.courses_taken.map(c => c.code).join(", ") || "None" %><br />
                  <% if (req.type !== 'one_required' && req.type !== 'all_required') { %>
                    Options: <%= req.courses_remaining.map(c => c.code).join(", ") || "None" %>
                  <% } %>
                </div>
              </div>
            <% }) %>
          </div>
        </div>

      <% } else if (section === "communication_requirement") { %>
        <!-- Special rendering for new communication_requirement object -->
        <div class="results-section mb-3">
          <button
            class="btn btn-outline-light w-100 text-start"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#section-<%= idx %>"
            aria-expanded="false"
            aria-controls="section-<%= idx %>">
            Communication Requirements
          </button>

          <div class="collapse" id="section-<%= idx %>">
            <% Object.entries(requirements.lists).forEach(([listName, list]) => { %>
              <div class="requirement-item">
                <strong><%= list.description %></strong>
                <div class="meta">
                  Taken: <%= list.courses_taken.map(c => c.code).join(", ") || "None" %><br />
                  Options available: <%= list.courses_remaining.map(c => c.code).join(", ") || "None" %>
                </div>
              </div>
            <% }) %>

            <h5 class="mt-3">Options</h5>
            <% requirements.options.forEach(opt => { %>
              <div class="requirement-item">
                <strong><%= opt.description %></strong>
                <span class="badge <%= opt.met ? 'met' : 'not-met' %> ms-2">
                  <%= opt.met ? "Met" : "Not Met" %>
                </span>
              </div>
            <% }) %>
          </div>
        </div>
      <% } %>

    <% }) %>
  </div>
</main>

<!-- Button to open modal -->
<button class="btn btn-outline-light" 
        data-bs-toggle="modal" 
        data-bs-target="#editCoursesModal" style="width: 20%; align-self: center; text-align: center; background-color: rgba(0, 0, 0, 0.616);">
  See / Edit Courses
</button>

<!-- Modal -->
<div class="modal fade" id="editCoursesModal" tabindex="-1" aria-labelledby="editCoursesModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/submit" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="editCoursesModalLabel">Edit Your Courses</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <!-- Keep the same major -->
          <input type="hidden" name="major" value="<%= program %>">

          <label for="courses" class="form-label">Courses (comma-separated):</label>
          <textarea name="courses" id="courses" class="form-control" rows="4"><%= userCourses %></textarea>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>


      <footer class="mt-auto text-white-50">
        <p>&copy; 2025 OnTrack. All rights reserved.</p>
      </footer>
    </div>

    <!-- Vanta.NET Background Init -->
    <script>
      VANTA.NET({
        el: "#vanta-bg",
        mouseControls: true,
        touchControls: true,
        minHeight: 200.0,
        minWidth: 200.0,
        scale: 1.0,
        scaleMobile: 1.0,
        color: 0xffffff,
        backgroundColor: 0x000000,
        points: 10.0,
        maxDistance: 20.0,
        spacing: 15.0,
      });

      new bootstrap.Modal(document.getElementById('editCoursesModal'), {backdrop: false});
    </script>
  </body>
</html>
