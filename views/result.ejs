      </form>
    </div>
  </div>
</div>


      <footer class="mt-auto text-white-50">
        <p>&copy; 2025 OnTrack. All rights reserved.</p>
      </footer>
    </div>

    <!-- Vanta.NET Background Init -->
    <script>
      VANTA.NET({
        el: "#vanta-bg",
        mouseControls: true,
        touchControls: true,
        minHeight: 200.0,
        minWidth: 200.0,
        scale: 1.0,
        scaleMobile: 1.0,
        color: 0xffffff,
        backgroundColor: 0x000000,
        points: 10.0,
        maxDistance: 20.0,
        spacing: 15.0,
      });

      new bootstrap.Modal(document.getElementById('editCoursesModal'), {backdrop: false});
    </script>

    <!-- UWFlow tooltips -->
    <script>
  const tooltipCache = new Map(); // code -> Promise(data)
  let activeTooltip = null;       // currently visible tooltip instance

  document.querySelectorAll(".course-code").forEach(el => {
    const code = el.dataset.code;
    const tooltip = new bootstrap.Tooltip(el, { html: true, trigger: "hover" });

    el.addEventListener("mouseenter", async () => {
      // Hide any other tooltip
      if (activeTooltip && activeTooltip !== tooltip) {
        activeTooltip.hide();
      }
      activeTooltip = tooltip;

      // Show immediately with loading text
      tooltip.setContent({
        ".tooltip-inner": "Loading UWFlow data..."
      });
      tooltip.show();

      // Cache the fetch PROMISE (not a boolean)
      if (!tooltipCache.has(code)) {
        tooltipCache.set(
          code,
          fetch(`/api/uwflow/course/${code}`)
            .then(res => res.json())
            .catch(() => ({ error: true }))
        );
      }

      const data = await tooltipCache.get(code);

      // If user left before data arrived, do nothing
      if (activeTooltip !== tooltip) return;

      if (data.error) {
        tooltip.setContent({
          ".tooltip-inner": "No data available"
        });
        return;
      }

      tooltip.setContent({
        ".tooltip-inner": `
          <strong>${data.name}</strong><br>
          üëç Liked: ${Math.round(data.liked * 100)}%<br>
          üß† Useful: ${Math.round(data.useful * 100)}%<br>
          üòå Easy: ${Math.round(data.easy * 100)}%<br>
          üë• Ratings: ${data.filledCount}
        `
      });
    });

    el.addEventListener("mouseleave", () => {
      tooltip.hide();
      if (activeTooltip === tooltip) {
        activeTooltip = null;
      }
    });
  });
</script>

  </body>
</html>
